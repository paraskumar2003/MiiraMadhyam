<%-include('partials/Header')  %> 
<div class="upload-container">
    <div class="form-container-wrapper">
        <div class="heading">
            <div class="add-row flex jcb aic">
                <div class="add-column add-doctor">
                    <h1>Update Scheme</h1>
                </div>
            </div>
            <div class="underline-bar alfs">
                <div class="underline-fill"></div>
            </div>
        </div>

        <div class="form-container">
             
            <form action="/updateScheme" method="post">
                <div class="flex jcb aic hidden">
                    <input type="text"  
                        value="<%=item._id%>" name="_id">
                </div>
                <div class="flex jcb aic">
                        <label for="name">Name</label>
                        <input type="text"  
                        value="<%= item.name %> " name="name" required>
                    </div>
                    <div class="flex jcb aic">
                        <label for="name">Issue By</label>
                        <input type="text"  
                            value="<%= item.issueBy %>" name="issueBy">
                    </div>
                    <div class="flex jcb aic">
                        <label for="name">Benifit</label>
                        <input type="text"  
                            value="<%= item.keyFeature %>" name="keyFeature">
                            </div>
                    <div class="flex jcb aic">
                        <label for="name">Applicable</label>
                        <input type="text"  
                            value="<%= item.applicant %>" name="applicant">
                    </div>
                    <div class="flex jcb aic">
                        <label for="name">Apply Link</label>
                        <input type="text"  
                            value="<%= item.applyLink %>" name="applyLink">
                    </div>
                    <div class="flex jcb fdc">
                        <label for="desc">More Information about Scheme</label>
                        <input type="text" name="aboutScheme" value="<%= item.aboutScheme %>" rows="4"
                                placeholder="">
                        </div>
                    
                           <div>
                            <button class="btn-update btn" type="submit" name="action" value="update"><i class="fas fa-edit" style="padding-right:5px;"></i>Update</button>
                            <button class="btn btn-submit" type="submit" name="action" value="delete"><i class="fas fa-xmark" style="padding-right:5px;"></i>Cancel</button>
                            </div>
                </form>
        </div>
    </div>
</div>