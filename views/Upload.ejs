<!-- alert script -->
<script>
    const alertContainer = document.querySelector('.alert-container');
    if(alertContainer.classList.contains('added')){
        alertContainer.innerHTML=`<div class="alert alert-success alert-dismissible fade show" role="alert" data-aos="fade-in">Data Added
              <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>

            </div>`;
            // setDefault('added');
        }else if(alertContainer.classList.contains('deleted')){
            alertContainer.innerHTML=`<div class="alert alert-danger alert-dismissible fade show" role="alert" data-aos="fade-in">Data Deleted
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                
                </div>`;
                // setDefault('deleted');
            }else if(alertContainer.classList.contains('updated')){
                alertContainer.innerHTML=`<div class="alert alert-info alert-dismissible fade show" role="alert" data-aos="fade-in">Data Updated
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    
                    </div>`;
                    // setDefault('updated');
                }else if(alertContainer.classList.contains('invalid-img')){
                    alertContainer.innerHTML=`<div class="alert alert-danger alert-dismissible fade show" role="alert" data-aos="fade-in">Can't add data. Image size should be less than 200kb.
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        
                        </div>`;
                        // setDefault('invalid-img');
    }else{
        alertContainer.innerHTML=``;
    }
          
    setTimeout(()=>{
        alertContainer.innerHTML=``;
        alertContainer.classList.remove('added');
        alertContainer.classList.remove('deleted');
        alertContainer.classList.remove('updated');
        alertContainer.classList.remove('invalid-img');
    },3000)
</script>






